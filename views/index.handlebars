<div class="row">
  <div class="col">
    <div id="articles" class="w-100">
      {{#each articles}}
      <p class="border h3 bg-light" data-id="{{this.id}}">
        {{this.title}}<br />
        <a class="h6" href="https://www.espn.com{{this.link}}"> https://www.espn.com{{this.link}}</a>
      </p>
      {{/each}}
    </div>
  </div>
  <div class="col">
    <div class="row w-100">
      <div class="navbar w-100">
        <a href="/scrape/{{sport}}" class="w-100"><button class="btn btn-success w-100 btn-lg btn-block"
            data-name="{{sport}}">
            Scrape
            {{sport}}</button></a>
      </div>
    </div>
    <div class="row w-100">
      <div id="notes" class="w-100"></div>
    </div>
  </div>

</div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="app.js"></script>